<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="A Simple PHP Framework for web Applications">
    <meta name="author" content="peter nyirenda">
    
    <title>{{ title }}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ render_static('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ render_static('assets/css/style.css') }}" rel="stylesheet">
  </head>

  <body>
    <main role="main" class="container">
      <div class="starter-template">
        <h1>Devpyjoh Starter</h1>
        <p class="lead">A Simple PHP Framework for web Applications</p>
        <a href="/about">about</a>
      </div>
      <button type="button" id="test">Test</button>
      <form action="/" method="POST" id="hello">
      {{form_row(form.email,{'attr':{'class':'col-md-4'},'label':'Email'}) }}
      {{form_row(form.password,{'attr':{'class':'col-md-4'},'label':'Password'}) }}
      <input type="submit" class="btn btn-class " id="submit" value="Submit">
      </form>
    </main>
    <script>
      var xhttp = new  XMLHttpRequest();
      document.getElementById("test").addEventListener("click",function(e){
        e.preventDefault();

        xhttp.open("GET","/about/?name=Helloworld", true);
        xhttp.onreadystatechange =()=>{
          if (xhttp.readyState == 4 && xhttp.status == 200){
              console.log(xhttp.response);
          }
        }
        xhttp.send();
      });
    </script>
  </body>
</html>
