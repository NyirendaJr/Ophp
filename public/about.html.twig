<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="A Simple PHP Framework for web Applications">
    <meta name="author" content="peter nyirenda">

    <title>{{ title }}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ render_static('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ render_static('assets/css/style.css') }}" rel="stylesheet">
</head>

<body>
<main role="main" class="container">
    <div>
        {% for q in qs %}
            <h2>{{ q.question }}</h2>
            <ul>
                {% for a in q.answers %}
                <li>{{ a.answer }}</li>
                {% endfor %}
            </ul>
        {% endfor %}
    </div>
</main>
</body>